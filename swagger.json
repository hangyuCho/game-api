{
    "swagger": "2.0",
    "basePath": "/api",
    "info": {
      "description": "simple game apis",
      "contact": {},
      "title": "game-api Sample Swagger API",
      "version": "1.0"
    },
    "host": "localhost:30000",
    "schemes": [
      "http"
    ],
    "tags": [
      {
        "name": "game-api",
        "description": "base"
      }
    ],
    "paths": {
      "/hello": {
        "get": {
          "tags": [
            "hello"
          ],
          "summary": "hello world",
          "consumes": [
            "application/json"
          ],
          "description": "hello world description",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        }
      }
    },
    "securityDefinitions": {
      "game-api-auth": {
        "type": "oauth2",
        "authorizationUrl": "http://localhost:30000/hello",
        "flow": "implicit",
        "scopes": {
          "write:pets": "modify game in your account",
          "read:pets": "read your games"
        }
      },
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      }
    }
  }